<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_fragment_edit_playlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnPrimary"
    tools:context=".playlists.FragmentEditPlaylist">

    <Button
        android:id="@+id/button_edit_songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_songs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_playlist_name" />

    <EditText
        android:id="@+id/edit_text_playlist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_playlist_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_view_playlist_name"
        app:layout_constraintTop_toTopOf="@+id/text_view_playlist_name"
        android:hint="@string/new_playlist"
        android:autofillHints="@string/new_playlist" />

    <TextView
        android:id="@+id/text_view_playlist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/playlist_name"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/button_edit_songs"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_playlist_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>