<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentTitle">

    <fragment
        android:id="@+id/fragmentTitle"
        android:name="com.fourthfinger.pinkyplayer.songs.FragmentTitle"
        android:label="fragment_title"
        tools:layout="@layout/fragment_title" >
        <action
            android:id="@+id/action_fragmentTitle_to_fragmentSettings"
            app:destination="@id/fragmentSettings" />
        <action
            android:id="@+id/action_fragmentTitle_to_fragmentSongs"
            app:destination="@id/fragmentMasterPlaylist" />
    </fragment>

    <fragment
        android:id="@+id/fragmentSettings"
        android:name="com.fourthfinger.pinkyplayer.settings.FragmentSettings"
        android:label="FragmentSettings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/fragmentLoading"
        android:name="com.fourthfinger.pinkyplayer.songs.FragmentLoading"
        android:label="FragmentLoading"
        tools:layout="@layout/fragment_loading"/>
    <fragment
        android:id="@+id/fragmentMasterPlaylist"
        android:name="com.fourthfinger.pinkyplayer.playlists.FragmentMasterPlaylist"
        android:label="recycler_view_song_list"
        tools:layout="@layout/recycler_view_song_list" >
        <action
            android:id="@+id/action_fragmentMasterPlaylist_to_fragmentSong"
            app:destination="@id/fragmentSong" />
    </fragment>
    <fragment
        android:id="@+id/fragmentSong"
        android:name="com.fourthfinger.pinkyplayer.playlists.FragmentSong"
        android:label="FragmentSong"
        tools:layout="@layout/fragment_song" />
</navigation>